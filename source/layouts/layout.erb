<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title><%= current_page.data.title || "Bjørn Rostad designs apps and websites" %></title>
    <meta content="Bjørn Rostad is a designer" name="description">
    <meta content="Bjørn Rostad" name="author">

    <%= favicon_tag 'favicon.ico' %>
    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag 'all'  %>

  </head>

  <body class="<%= page_classes %>">
    <div id="main">
      <%= yield %>

      <footer>
        <p><%= link_to 'hi@bjornrostad.no', 'mailto:hi@bjornrostad.no' %> <span>/</span> <%= link_to 'iMessage', 'imessage:hi@bjornrostad.no' %> <span>/</span> <%= link_to 'Twitter', 'http://twitter.com/bearroast' %></p>
      </footer>

    </div>
  </body>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-22572557-1']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>

  <script>
    var hamburger = document.getElementById('fullscreen-menu-toggle');
    hamburger.addEventListener('click', function (e) {
        hamburger.classList.toggle('is-active');
        e.preventDefault();
    });

    $("a[href='#scroll-to-top']").click(function() {
      $("html, body").animate({ scrollTop: 0 }, "slow");
      return false;
    });
  </script>
</html>
